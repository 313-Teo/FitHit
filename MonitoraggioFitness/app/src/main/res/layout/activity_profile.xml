<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="top"
    android:background="@drawable/profile_card_background"
    tools:context=".ProfileActivity">

    <ImageButton
        android:id="@+id/indietro"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:clickable="true"
        android:background="@drawable/freccia">
    </ImageButton>

    <TextView
        android:id="@+id/profileText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PROFILO"
        android:layout_marginTop="0dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="36sp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/profilo">
    </ImageView>

    <TextView
        android:id="@+id/account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="13dp"
        android:padding="0dp"
        android:text="ACCOUNT"
        android:textAlignment="center"
        android:textColor="@color/orange"
        android:textSize="25dp"
        android:textStyle="italic"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/custom_edittext"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp">

                <TextView
                    android:id="@+id/codiceText"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:text="CODICE"
                    android:gravity="center_vertical"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <Space
                    android:layout_width="10dp"
                    android:layout_height="1dp">
                </Space>

                <TextView
                    android:id="@+id/codice"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:text="AT123456"
                    android:gravity="center_vertical"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp">

                <TextView
                    android:id="@+id/nomeText"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:text="NOME"
                    android:gravity="center_vertical"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    android:textStyle="bold" />


                <Space
                    android:layout_width="10dp"
                    android:layout_height="1dp">
                </Space>

                <TextView
                    android:id="@+id/nome"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:text="Nome"
                    android:gravity="center_vertical"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp">

                <TextView
                    android:id="@+id/cognomeText"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:text="COGNOME"
                    android:gravity="center_vertical"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <Space
                    android:layout_width="10dp"
                    android:layout_height="1dp">
                </Space>

                <TextView
                    android:id="@+id/cognome"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:text="Cognome"
                    android:gravity="center_vertical"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp">

                <TextView
                    android:id="@+id/pesoText"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:text="PESO"
                    android:gravity="center_vertical"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <Space
                    android:layout_width="10dp"
                    android:layout_height="1dp">
                </Space>

                <TextView
                    android:id="@+id/peso"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:text="00 Kg"
                    android:gravity="center_vertical"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/altezzaText"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:text="ALTEZZA"
                    android:gravity="center_vertical"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <Space
                    android:layout_width="10dp"
                    android:layout_height="1dp">
                </Space>

                <TextView
                    android:id="@+id/altezza"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:text="000 cm"
                    android:gravity="center_vertical"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="" />
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
